@model EntregaRapida.Models.Entregador


<h2>Cadastre-se como Entregador</h2>

<form method="post" asp-controller="Entregador" asp-action="Cadastro">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco" class="control-label"></label>
        <input asp-for="Endereco" class="form-control" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DDD" class="control-label"></label>
        <input asp-for="DDD" class="form-control" />
        <span asp-validation-for="DDD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Celular" class="control-label"></label>
        <input asp-for="Celular" class="form-control" />
        <span asp-validation-for="Celular" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CNH" class="control-label"></label>
        <input asp-for="CNH" class="form-control" />
        <span asp-validation-for="CNH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Modalidade" class="control-label"></label>
        @Html.DropDownListFor(model=>model.Modalidade,new
        SelectList(Enum.GetValues(typeof(EntregaRapida.Models.Enum.Modalidade))))
    </div>
     <div class="form-group">
        <label asp-for="Veiculo" class="control-label"></label>
        @Html.DropDownListFor(model=>model.Veiculo,new
        SelectList(Enum.GetValues(typeof(EntregaRapida.Models.Enum.Veiculo))))
    </div>
      <div class="form-group">
        <label asp-for="PlataformaId" class="control-label"></label>
        <input asp-for="PlataformaId" class="form-control" value="1"/>
        <span asp-validation-for="PlataformaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

 @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}