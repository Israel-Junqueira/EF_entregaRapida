@model EntregaRapida.ViewModel.EntregadorUsersViewModel


<h2>Cadastre-se como Entregador</h2>

<form method="post" asp-controller="RegistroEntregador" asp-action="CadastroEntregadorUsers">

    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Endereco" class="control-label"></label>
        <input asp-for="Endereco" class="form-control" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DDD" class="control-label"></label>
        <input asp-for="DDD" class="form-control" />
        <span asp-validation-for="DDD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Celular" class="control-label"></label>
        <input asp-for="Celular" class="form-control" />
        <span asp-validation-for="Celular" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CNH" class="control-label"></label>
        <input asp-for="CNH" class="form-control" />
        <span asp-validation-for="CNH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Modalidade" class="control-label"></label>
        @Html.DropDownListFor(model=>model.Modalidade,new
        SelectList(Enum.GetValues(typeof(EntregaRapida.Models.Enum.Modalidade))))
    </div>
    <div class="form-group">
        <label asp-for="Veiculo" class="control-label"></label>
        @Html.DropDownListFor(model=>model.Veiculo,new
        SelectList(Enum.GetValues(typeof(EntregaRapida.Models.Enum.Veiculo))))
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="PlataformaId" class="form-control" value="1" />
    </div>


     <div class="form-group">
        <label asp-for="NomeUsuario" class="control-label"></label>
        <input asp-for="NomeUsuario" class="form-control" />
        <span asp-validation-for="NomeUsuario" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Senha" class="control-label"></label>
        <input asp-for="Senha" class="form-control" type="password" />
        <span asp-validation-for="Senha" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Senhaconfirmar" class="control-label"></label>
        <input asp-for="Senhaconfirmar" class="form-control" type="password"/>
        <span asp-validation-for="Senhaconfirmar" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
        <div class="form-group">
        <label asp-for="EmailConfirmar" class="control-label"></label>
        <input asp-for="EmailConfirmar" class="form-control" />
        <span asp-validation-for="EmailConfirmar" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}