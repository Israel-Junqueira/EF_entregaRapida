@using Microsoft.AspNetCore.Identity


@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> Usermaneger;

<!--Verifica se tem alguem logado-->
@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Login" asp-action="Logout" method="post" class="navbar-left">
        <ul class ="nav navbar-nav navbar-lef">
            <button type="submit" style="color:black" class="nav-link btn btn-link py-0">
                    Sair 
            </button>
        </ul>
     </form>
}else
{
    <ul class="nav navbar-nav navbar-left">
        <a class="nav-link btn btn-link py-0" asp-controller="Account" asp-action="Login" style="color:black">Login</a>
        <a class="nav-link btn btn-link py-0" asp-controller="Account" asp-action="Register" style="color:black">Registro</a>
    </ul>
}
<!--Verifica qual a identidade do cara logado lojissta ou Entregador-->
@if (User.Identity.IsAuthenticated)
{
      var usuario = await Usermaneger.FindByNameAsync(User.Identity.Name);
      var roles = await Usermaneger.GetRolesAsync(usuario);
   
  
    if(roles.Contains("Lojista"))
       {
       <ul class ="nav navbar-nav navbar-right">
           <a class="nav-link btn btn-link py-0" style="color:black" asp-controller="Comerciante" asp-action="Index" asp-area="Comerciante" >
            Logística
           </a>
       </ul>
        }else if (roles.Contains("Entregador"))
        {
        <ul class ="nav navbar-nav navbar-right">
            <a class="nav-link btn btn-link py-0" style="color:black" asp-controller="Entregador" asp-action="Index" asp-area="Entregador" >
               Delivery
            </a>
        </ul>
        }

}

